<iframe
        {% if null != width %}
            width="{{ width }}"
        {% endif %}
        {% if null != height %}
            height="{{ height }}"
        {% endif %}
        src="http://www.youtube.com/embed/{{ code }}?autoplay={{ autoPlay ? 1 : 0 }}&controls={{ controls ? 1 : 0 }}&loop={{ playInLoop ? 1 : 0 }}&modestbranding=1"
        frameborder="0">
</iframe>