<iframe
        src="https://player.vimeo.com/video/{{ code }}?autoplay={{ autoplay ? 1 : 0 }}&loop={{ playInLoop ? 1 : 0 }}&badge=0"
        {% if null != width %}
            width="{{ width }}"
        {% endif %}
        {% if null != height %}
            height="{{ height }}"
        {% endif %}
        frameborder="0"
        webkitallowfullscreen
        mozallowfullscreen
        allowfullscreen>
</iframe>
