{% extends 'VictoireCoreBundle:Widget:show.html.twig' %}

{% block content %}
    {% if video.video.contentType == "remote/video" %}
        {% include 'VictoireWidgetVideoBundle::embed/_'~ video.video.metadata.type ~'.html.twig' with {
            "code": video.video.metadata.code,
            "autoPlay": video.autoPlay,
            "controls": video.controls,
            "playInLoop": video.playInLoop,
            "responsive": video.responsive,
            "width": video.width ? video.width : null,
            "height": video.height ? video.height : null,
        } %}
    {% elseif video.video.contentType == "video/mp4" or video.video.contentType == "video/ogg" or video.video.contentType == "video/webm" %}
        {% include 'VictoireWidgetVideoBundle:hosted:_hosted.html.twig' with {
            "url": video.video.url,
            "mimeType": video.video.contentType,
            "autoPlay": video.autoPlay,
            "controls": video.controls,
            "playInLoop": video.playInLoop,
            "responsive": video.responsive,
            "width": video.width ? video.width : null,
            "height": video.height ? video.height : null,
        } %}
    {% else %}
        {{ 'victoire.widget.video.stream.error'|trans }}
    {% endif %}
{% endblock content %}