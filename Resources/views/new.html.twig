{% extends 'VictoireCoreBundle:Widget:new.html.twig' %}

{% block form_static %}
    <div id="picker-{{ form.mode.vars.data }}" class="vic-tab-pane vic-active">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.video.video) }}
            </div>
            <div class="col-md-6">
                <div class="row">
                    {{ form_widget(form.video.autoplay) }}
                </div>
                <div class="row">
                    {{ form_widget(form.video.playInLoop) }}
                </div>
                <div class="row">
                    {{ form_widget(form.video.responsive) }}
                </div>
                <div class="row">
                    {{ form_widget(form.video.controls) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.video.width) }}
                {{ form_row(form.video.height) }}
            </div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock form_static %}

{% block form %}
    {{ parent() }}
{% endblock form %}
